                </header>
                <div class="mdl-layout-spacer"></div>
                <nav class="demo-navigation mdl-navigation">
                    <a class="mdl-navigation__link" href="/user/profile"
                        ><i class="material-icons" role="presentation"
                            >cast_for_education</i
                        >Home</a
                    >
                    <a class="mdl-navigation__link" href="/user/settings"
                        ><i class="material-icons" role="presentation"
                            >settings</i
                        >Settings</a
                    >
                    <a class="mdl-navigation__link" href="/user/logout"
                        ><i class="material-icons" role="presentation"
                            >account_circle</i
                        >Logout</a
                    >
                    <a class="mdl-navigation__link" href="/user/contact"
                    ><i
                      class="material-icons"
                      role="presentation"
                      >help_outline</i
                    >Contact</a
                  >
                  <a class="mdl-navigation__link" href="/user/faq"
                  ><i
                    class="material-icons"
                    role="presentation"
                    >help_outline</i
                  >FAQ</a
                >
                </nav>
            </div>
            <main class="mdl-layout__content mdl-color--grey-100">
                <div class="settings">
                    <div class="container">
                 <form action="/user/settings/profile/image/<%= user._id %>" enctype="multipart/form-data" method="POST">
                    <div class="profile_image">
                        <div class="image_container">
                            <% if(user.profileImage){ %>
                                <img src="<%= user.profileImage %>" class="demo-avatar" />
                              <% } else{ %>  
                            <img src="/images/user.jpg" class="demo-avatar" />
                             <% } %>
                        </div>
                    </div>
                    <input type="file" name="profileImage">
                    <input type="submit" value="Change picture">
                 </form>
                        <h4 class="heading">Change Password</h4>
                        <div class="profile_settings">
                            <form action="#" class="form" autocomplete="off">
                                <div class="form_fieldItem">
                                    <label for="fullName"
                                        >Current Password</label
                                    >
                                    <input
                                        type="password"
                                        placeholder="Enter Current Password"
                                        name="currentPassword"
                                    />
                                </div>
                                <div class="form_fieldItem">
                                    <label for="scholarID">New Password</label>
                                    <input type="password" name="newPassword" />
                                </div>
                                <div class="form_fieldItem">
                                    <label for="scholarID"
                                        >Confirm New Password</label
                                    >
                                    <input type="password" />
                                </div>
