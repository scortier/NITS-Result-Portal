            setTimeout(() => {
                if(document.querySelector(".alert-flash-msg")==null){
                    document.querySelector(".sucess-flash-msg").style.display="none";
                }
                else{
                    document.querySelector(".alert-flash-msg").style.display="none";
                }     
            }, 5000)
            const closeIt=()=>{
                if(document.querySelector(".alert-flash-msg")==null){
                    document.querySelector(".sucess-flash-msg").style.display="none";
                }
                else{
                    document.querySelector(".alert-flash-msg").style.display="none";
