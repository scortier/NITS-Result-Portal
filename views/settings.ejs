                        <div class="profile_image">
                            <div class="image_container">
                                <img src="/images/user.jpg" alt="" />
                            </div>
                            <a href="#">Change Profile Picture</a>
                        </div>
                        <div class="profile_settings">
                            <form action="#" class="form" autocomplete="off">
